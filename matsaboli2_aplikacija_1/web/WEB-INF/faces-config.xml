<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{prijava.login()}</from-action>
            <from-outcome>login</from-outcome>
            <to-view-id>/pregledKorisnika.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.login()}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>          
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pregledZahtjeva.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledZahtjeva.goToPregledKorisnika()}</from-action>
            <from-outcome>pregledKorisnika</from-outcome>
            <to-view-id>/pregledKorisnika.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledZahtjeva.goToPregledDnevnika()}</from-action>
            <from-outcome>pregledDnevnika</from-outcome>
            <to-view-id>/pregledDnevnika.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.logout()}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pregledKorisnika.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledKorisnika.goToPregledDnevnika()}</from-action>
            <from-outcome>pregledDnevnika</from-outcome>
            <to-view-id>/pregledDnevnika.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledKorisnika.goToPregledZahtjeva()}</from-action>
            <from-outcome>pregledZahtjeva</from-outcome>
            <to-view-id>/pregledZahtjeva.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.logout()}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pregledDnevnika.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledDnevnika.goToPregledKorisnika()}</from-action>
            <from-outcome>pregledKorisnika</from-outcome>
            <to-view-id>/pregledKorisnika.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledDnevnika.goToPregledZahtjeva()}</from-action>
            <from-outcome>pregledZahtjeva</from-outcome>
            <to-view-id>/pregledZahtjeva.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{prijava.logout()}</from-action>
            <from-outcome>logout</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case> 
    </navigation-rule>
</faces-config>
